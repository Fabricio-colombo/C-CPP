{
  "configurations": [
    {
      "name": "windows-gcc-x64",
      "includePath": [
        "${workspaceFolder}/**"
      ],
      "compilerPath": "C:/MinGW/bin/gcc.exe",
      "cStandard": "${default}",
      "cppStandard": "${default}",
      "intelliSenseMode": "windows-gcc-x64",
      "terminal.integrated.shellArgs.windows": ["-NoExit", "/K", "chcp 65001"],
      "compilerArgs": [
        "-std=c++11",
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ]
    }
  ],
  "version": 4
}
